<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_image"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsvFriendProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/loader"
                        android:progressTint="@color/white"
                        android:visibility="gone"></ProgressBar>
                    <android.support.v4.view.ViewPager
                        android:id="@+id/vpProfileImages"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_170">

                    </android.support.v4.view.ViewPager>

                    <com.example.cupidlove.customview.textview.TextViewRegular
                        android:id="@+id/friendprofilename"
                        style="@style/txt_white_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="@dimen/value_25"
                        android:elevation="@dimen/value_5"
                        android:shadowColor="@color/black"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="4"/>

                    <LinearLayout
                        android:id="@+id/llDots"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_20"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/value_1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/value_10"
                        android:layout_marginStart="@dimen/value_10"
                        android:background="@color/orange" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_dot" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/value_5"
                                    android:layout_marginStart="@dimen/value_5"
                                    android:orientation="vertical">

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/quote" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/value_1"
                                        android:background="@color/white" />

                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_20"
                                android:layout_marginRight="@dimen/value_10"
                                android:layout_marginStart="@dimen/value_20"
                                android:layout_marginEnd="@dimen/value_10"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/value_10"
                                    app:srcCompat="@drawable/ic_left_quote" />

                                <com.example.cupidlove.customview.textview.TextViewRegular
                                    android:id="@+id/tvQuote"
                                    style="@style/txt_white_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/value_8"
                                    android:layout_marginRight="@dimen/value_8"
                                    android:layout_marginStart="@dimen/value_8"
                                    android:layout_marginEnd="@dimen/value_8"
                                    android:layout_marginTop="@dimen/value_4"
                                    android:gravity="center" />

                                <com.example.cupidlove.customview.textview.TextViewRegular
                                    android:id="@+id/tvQuoteAns"
                                    style="@style/txt_white_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/value_10"
                                    android:background="@color/transparent_white"
                                    android:gravity="start"
                                    android:padding="@dimen/value_5" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_dot" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/value_5"
                                    android:layout_marginStart="@dimen/value_5"
                                    android:orientation="vertical">

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/about_me" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/value_1"
                                        android:background="@color/white" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_15"
                                android:layout_marginRight="@dimen/value_10"
                                android:layout_marginStart="@dimen/value_15"
                                android:layout_marginEnd="@dimen/value_10"
                                android:orientation="vertical">

                                <com.example.cupidlove.customview.textview.TextViewRegular
                                    android:id="@+id/tvAboutMe"
                                    style="@style/txt_white_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/value_5"
                                    android:layout_marginStart="@dimen/value_5"
                                    android:layout_marginTop="@dimen/value_5"
                                    android:background="@color/transparent_white"
                                    android:gravity="start"
                                    android:padding="@dimen/value_5" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_dot" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/value_5"
                                    android:layout_marginLeft="@dimen/value_5"
                                    android:orientation="vertical">

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/basics" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/value_1"
                                        android:background="@color/white" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_20"
                                android:layout_marginRight="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_20"
                                android:layout_marginEnd="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/ivAge"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_birthday_cake" />

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        android:id="@+id/tvAge"
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/value_5"
                                        android:layout_marginRight="@dimen/value_10"
                                        android:layout_marginStart="@dimen/value_5"
                                        android:layout_marginEnd="@dimen/value_10"/>

                                    <ImageView
                                        android:id="@+id/ivHeight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_height" />

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        android:id="@+id/tvHeight"
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/value_5"
                                        android:layout_marginStart="@dimen/value_5"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_20"
                                android:layout_marginRight="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_20"
                                android:layout_marginEnd="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/ivGraduate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_graduate" />

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        android:id="@+id/tvGraduate"
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/value_5"
                                        android:layout_marginRight="@dimen/value_10"
                                        android:layout_marginStart="@dimen/value_5"
                                        android:layout_marginEnd="@dimen/value_10" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_20"
                                android:layout_marginRight="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_20"
                                android:layout_marginEnd="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/ivProfession"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_briefcase" />

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        android:id="@+id/tvProfession"
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/value_5"
                                        android:layout_marginRight="@dimen/value_10"
                                        android:layout_marginStart="@dimen/value_5"
                                        android:layout_marginEnd="@dimen/value_10" />

                                    <ImageView
                                        android:id="@+id/ivBaby"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_baby" />

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        android:id="@+id/tvBaby"
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/value_5"
                                        android:layout_marginStart="@dimen/value_5"/>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llReligion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_dot" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/value_5"
                                    android:layout_marginStart="@dimen/value_5"
                                    android:orientation="vertical">

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/religion" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/value_1"
                                        android:background="@color/white" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_20"
                                android:layout_marginRight="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_20"
                                android:layout_marginEnd="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="vertical">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rvReligion"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </android.support.v7.widget.RecyclerView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llEthnicity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_dot" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/value_5"
                                    android:layout_marginStart="@dimen/value_5"
                                    android:orientation="vertical">

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ethnicity" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/value_1"
                                        android:background="@color/white" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_20"
                                android:layout_marginRight="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_20"
                                android:layout_marginEnd="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="vertical">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rvEthnicity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </android.support.v7.widget.RecyclerView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llInstaView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/value_10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_dot" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/value_5"
                                    android:layout_marginStart="@dimen/value_5"
                                    android:orientation="vertical">

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/instagram_images" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/value_1"
                                        android:background="@color/white" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llInstanotConnected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_20"
                                android:layout_marginRight="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_20"
                                android:layout_marginEnd="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_instagram" />

                                <com.example.cupidlove.customview.textview.TextViewRegular
                                    style="@style/txt_white_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/value_4"
                                    android:text="@string/instagram_not_connected" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llInstaConnected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_20"
                                android:layout_marginRight="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_20"
                                android:layout_marginEnd="@dimen/value_5"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="vertical">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rvInstaUserImages"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </android.support.v7.widget.RecyclerView>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_5"
            android:layout_marginStart="@dimen/value_5"
            android:layout_marginTop="@dimen/value_5"
           app:srcCompat="@drawable/ic_back_left_arrow_circular_button" />
    </FrameLayout>
</LinearLayout>
