<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llMain"
    tools:context="com.example.cupidlove.activity.DatePreferenceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_header_home"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_image"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/value_1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/value_10"
                        android:layout_marginStart="@dimen/value_10"
                        android:background="@color/orange" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/value_5"
                            android:layout_marginStart="@dimen/value_5"
                            android:layout_marginTop="@dimen/value_5"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_dot" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/value_5"
                                android:paddingStart="@dimen/value_5">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/height" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/value_1"
                                        android:background="@color/white" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:orientation="vertical"
                                android:paddingRight="@dimen/value_10"
                                android:paddingEnd="@dimen/value_10">

                                <com.example.cupidlove.customview.textview.TextViewRegular
                                    style="@style/txt_white_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/always_visible" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/value_5"
                            android:layout_marginStart="@dimen/value_5"
                            android:layout_marginTop="@dimen/value_5"
                            android:orientation="vertical">

                            <NumberPicker
                                android:id="@+id/npHeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_10"
                                android:layout_marginRight="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_10"
                                android:layout_marginEnd="@dimen/value_5"
                                android:nestedScrollingEnabled="false"
                                android:descendantFocusability="blocksDescendants"
                                android:theme="@style/AppTheme.Picker" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/value_5"
                            android:layout_marginStart="@dimen/value_5"
                            android:layout_marginTop="@dimen/value_5"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_dot" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:orientation="vertical"

                                android:paddingLeft="@dimen/value_5"
                                android:paddingStart="@dimen/value_5">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/religion" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/value_1"
                                        android:background="@color/white" />

                                </LinearLayout>
                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_5"
                            android:orientation="vertical">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rvReligion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_15"
                                android:layout_marginRight="@dimen/value_10"
                                android:layout_marginStart="@dimen/value_15"
                                android:layout_marginEnd="@dimen/value_10">

                            </android.support.v7.widget.RecyclerView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/value_5"
                            android:layout_marginStart="@dimen/value_5"
                            android:layout_marginTop="@dimen/value_5"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_dot" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:orientation="vertical"

                                android:paddingLeft="@dimen/value_5"
                                android:paddingStart="@dimen/value_5">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <com.example.cupidlove.customview.textview.TextViewRegular
                                        style="@style/txt_white_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ethnicity" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/value_1"
                                        android:background="@color/white" />

                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_5"
                            android:orientation="vertical">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rvEthnicity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/value_15"
                                android:layout_marginRight="@dimen/value_10"
                                android:layout_marginStart="@dimen/value_15"
                                android:layout_marginEnd="@dimen/value_10">

                            </android.support.v7.widget.RecyclerView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/value_5"
                            android:layout_marginStart="@dimen/value_5"
                            android:layout_marginTop="@dimen/value_10"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_dot" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_5"
                                android:orientation="vertical">

                                <com.example.cupidlove.customview.textview.TextViewRegular
                                    style="@style/txt_white_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/kids" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/value_1"
                                    android:background="@color/white" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/value_20"
                            android:layout_marginRight="@dimen/value_5"
                            android:layout_marginStart="@dimen/value_20"
                            android:layout_marginEnd="@dimen/value_5"
                            android:layout_marginTop="@dimen/value_5"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivLeftKids"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_arrow_left" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rvKids"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_10"
                                android:layout_marginRight="@dimen/value_10"
                                android:layout_marginStart="@dimen/value_10"
                                android:layout_marginEnd="@dimen/value_10"
                                android:layout_weight="0.8">

                            </android.support.v7.widget.RecyclerView>

                            <ImageView
                                android:id="@+id/ivRightKids"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_arrow_right" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/value_20"
                            android:paddingRight="@dimen/value_10"
                            android:paddingStart="@dimen/value_20"
                            android:paddingEnd="@dimen/value_10">

                            <RadioGroup
                                android:id="@+id/radioKids"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/radioNone"
                                    style="@style/txt_white_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/white"
                                    android:text="@string/none" />

                                <RadioButton
                                    android:id="@+id/radioOneDay"
                                    style="@style/txt_white_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/white"
                                    android:text="@string/one_day" />

                                <RadioButton
                                    android:id="@+id/radioDontWantKids"
                                    style="@style/txt_white_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/white"
                                    android:text="@string/i_dont_want_kids" />

                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/value_5"
                            android:layout_marginStart="@dimen/value_5"
                            android:layout_marginTop="@dimen/value_5"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_dot" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_5"
                                android:layout_marginStart="@dimen/value_5"
                                android:orientation="vertical">

                                <com.example.cupidlove.customview.textview.TextViewRegular
                                    style="@style/txt_white_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/quote" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/value_1"
                                    android:background="@color/white" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/value_8"
                            android:layout_marginStart="@dimen/value_8"
                            android:layout_marginTop="@dimen/value_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/value_8"
                                android:layout_height="@dimen/value_8"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_information_icon" />

                            <com.example.cupidlove.customview.textview.TextViewRegular
                                style="@style/txt_white_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/value_3"
                                android:layout_marginStart="@dimen/value_3"
                                android:alpha="0.9"
                                android:text="@string/click_on_arrows_for_next_and_previous_question" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/value_20"
                            android:layout_marginRight="@dimen/value_10"
                            android:layout_marginStart="@dimen/value_20"
                            android:layout_marginEnd="@dimen/value_10"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/value_10"
                                app:srcCompat="@drawable/ic_left_quote" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/value_5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivLeftQuote"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_arrow_left" />

                                <com.example.cupidlove.customview.textview.TextViewRegular
                                    android:id="@+id/tvQuestion"
                                    style="@style/txt_white_small"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/value_5"
                                    android:layout_marginRight="@dimen/value_5"
                                    android:layout_marginStart="@dimen/value_5"
                                    android:layout_marginEnd="@dimen/value_5"
                                    android:layout_weight="0.8"
                                    android:gravity="center"
                                    android:text="@string/already_have_an_Account" />

                                <ImageView
                                    android:id="@+id/ivRightQuote"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_arrow_right" />

                            </LinearLayout>


                            <com.example.cupidlove.customview.edittext.EditTextRegular
                                android:id="@+id/etQuote"
                                style="@style/txt_white_small"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/value_60"
                                android:layout_marginTop="@dimen/value_10"
                                android:background="@color/transparent_white"
                                android:gravity="start"
                                android:padding="@dimen/value_8" />

                        </LinearLayout>


                        <com.example.cupidlove.customview.textview.TextViewBold
                            android:id="@+id/tvNext"
                            style="@style/txt_white_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_10"
                            android:background="@drawable/email_btn_bg"
                            android:gravity="center"
                            android:paddingBottom="@dimen/value_10"
                            android:paddingTop="@dimen/value_10"
                            android:text="@string/next" />
                    </LinearLayout>

                </FrameLayout>

            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>