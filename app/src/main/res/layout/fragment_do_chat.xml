<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvDoChat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_8"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llImageOne"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/value_3"
                        android:layout_marginRight="@dimen/value_3"
                        android:layout_marginStart="@dimen/value_3"
                        android:layout_marginEnd="@dimen/value_3"
                        android:layout_weight="0.25"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.9"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/civOne"
                                android:layout_width="@dimen/value_30"
                                android:layout_height="@dimen/value_30"
                                app:srcCompat="@drawable/ic_coffee" />
                        </LinearLayout>

                        <com.example.cupidlove.customview.textview.TextViewRegular
                            android:id="@+id/tvOne"
                            style="@style/txt_white_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_5"
                            android:gravity="center"
                            android:singleLine="true"
                            android:lines="1"
                            android:text="@string/coffee" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llImageTwo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/value_3"
                        android:layout_marginRight="@dimen/value_3"
                        android:layout_marginStart="@dimen/value_3"
                        android:layout_marginEnd="@dimen/value_3"
                        android:layout_weight="0.25"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/civTwo"
                                android:layout_width="@dimen/value_30"
                                android:layout_height="@dimen/value_30"
                                app:srcCompat="@drawable/ic_drink" />
                        </LinearLayout>

                        <com.example.cupidlove.customview.textview.TextViewRegular
                            android:id="@+id/tvTwo"
                            style="@style/txt_white_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_5"
                            android:gravity="center"
                            android:singleLine="true"
                            android:lines="1"
                            android:text="@string/drink" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llImageThree"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/value_3"
                        android:layout_marginRight="@dimen/value_3"
                        android:layout_marginStart="@dimen/value_3"
                        android:layout_marginEnd="@dimen/value_3"
                        android:layout_weight="0.25"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/civThree"
                                android:layout_width="@dimen/value_30"
                                android:layout_height="@dimen/value_30"
                                app:srcCompat="@drawable/ic_food" />
                        </LinearLayout>

                        <com.example.cupidlove.customview.textview.TextViewRegular
                            android:id="@+id/tvThree"
                            style="@style/txt_white_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_5"
                            android:gravity="center"
                            android:singleLine="true"
                            android:lines="1"
                            android:text="@string/food" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llImageFour"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/value_3"
                        android:layout_marginRight="@dimen/value_3"
                        android:layout_marginStart="@dimen/value_3"
                        android:layout_marginEnd="@dimen/value_3"
                        android:layout_weight="0.25"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/civFour"
                                android:layout_width="@dimen/value_30"
                                android:layout_height="@dimen/value_30"
                                app:srcCompat="@drawable/ic_fun" />
                        </LinearLayout>

                        <com.example.cupidlove.customview.textview.TextViewRegular
                            android:id="@+id/tvFour"
                            style="@style/txt_white_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_5"
                            android:gravity="center"
                            android:singleLine="true"
                            android:lines="1"
                            android:text="@string/fun" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_1"
                android:background="@color/orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPreferences"
                    android:layout_width="@dimen/value_40"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_heart_plus" />

                <TextView
                    android:layout_width="@dimen/value_1"
                    android:layout_height="match_parent"
                    android:background="@color/orange" />

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_gravity="center"-->
                <!--android:theme="@style/TextLabel">-->

                <com.example.cupidlove.customview.edittext.EditTextRegular
                    android:id="@+id/etChat"
                    style="@style/txt_white_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.9"
                    android:drawablePadding="@dimen/value_8"
                    android:hint="@string/type_your_message"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:padding="@dimen/value_8"
                    android:singleLine="true" />


                <!--</android.support.design.widget.TextInputLayout>-->

                <ImageView
                    android:id="@+id/ivSend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/value_4"
                    app:srcCompat="@drawable/ic_send" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>