<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/value_2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="horizontal"
        android:padding="@dimen/value_3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/value_10"
                android:layout_height="@dimen/value_10"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/value_4"
                android:layout_marginStart="@dimen/value_4"
                app:srcCompat="@drawable/ic_settings" />

            <com.example.cupidlove.customview.textview.TextViewRegular
                android:id="@+id/tvTitle"
                style="@style/txt_white_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/value_8"
                android:layout_marginStart="@dimen/value_8"
                android:text="@string/app_name" />

        </LinearLayout>

        <!--<FrameLayout-->
            <!--android:id="@+id/flNotification"-->
            <!--android:layout_width="@dimen/value_10"-->
            <!--android:layout_height="@dimen/value_10"-->
            <!--android:background="@drawable/ic_circle_white_small">-->

            <com.example.cupidlove.customview.textview.TextViewRegular
                android:id="@+id/tvNotificationCount"
                style="@style/txt_black_micro"
                android:layout_width="@dimen/value_12"
                android:layout_height="@dimen/value_12"
                android:gravity="center"
                android:layout_marginRight="@dimen/value_6"
                android:layout_marginEnd="@dimen/value_6"
                android:padding="@dimen/value_1"
                android:text="10"
                android:visibility="visible"
                android:background="@drawable/circle_view"/>
        <!--</FrameLayout>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/value_2"></LinearLayout>
</LinearLayout>