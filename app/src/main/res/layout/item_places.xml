<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llMain"
    android:elevation="@dimen/value_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRandomColor"
            android:layout_width="@dimen/value_2"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ProgressBar
                android:layout_width="@dimen/value_15"
                android:layout_height="@dimen/value_15"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/loader"/>

        <ImageView
            android:id="@+id/ivPlaceImage"
            android:layout_width="@dimen/value_50"
            android:layout_height="@dimen/value_50"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image_not_found"/>


        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/value_5"
            android:layout_marginStart="@dimen/value_5">

            <com.example.cupidlove.customview.textview.TextViewRegular
                android:id="@+id/tvPlaceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/cafe_near_by_you"/>

            <!--<RatingBar-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--style= "@style/CustomRatingBar"-->
                <!--android:id="@+id/ratingBar"-->
                <!--android:numStars="5"-->
                <!--android:stepSize="0.2"-->
                <!--android:isIndicator="true"/>-->
            <!--<RatingBar-->
                <!--android:id="@+id/ratingBar1"-->
                <!--style="@style/foodRatingBar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_2"
                android:layout_marginBottom="@dimen/value_2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivStarOne"
                    android:layout_width="@dimen/value_5"
                    android:layout_height="@dimen/value_5"
                    app:srcCompat="@drawable/ic_star_blank"/>

                <ImageView
                    android:id="@+id/ivStarTwo"
                    android:layout_width="@dimen/value_5"
                    android:layout_height="@dimen/value_5"
                    android:layout_marginLeft="@dimen/value_2"
                    android:layout_marginStart="@dimen/value_2"
                    app:srcCompat="@drawable/ic_star_blank"/>

                <ImageView
                    android:id="@+id/ivStarThree"
                    android:layout_width="@dimen/value_5"
                    android:layout_height="@dimen/value_5"
                    android:layout_marginStart="@dimen/value_2"
                    android:layout_marginLeft="@dimen/value_2"
                    app:srcCompat="@drawable/ic_star_blank"/>

                <ImageView
                    android:id="@+id/ivStarFour"
                    android:layout_width="@dimen/value_5"
                    android:layout_height="@dimen/value_5"
                    android:layout_marginLeft="@dimen/value_2"
                    android:layout_marginStart="@dimen/value_2"
                    app:srcCompat="@drawable/ic_star_blank"/>

                <ImageView
                    android:id="@+id/ivStarFive"
                    android:layout_width="@dimen/value_5"
                    android:layout_height="@dimen/value_5"
                    android:layout_marginStart="@dimen/value_2"
                    android:layout_marginLeft="@dimen/value_2"
                    app:srcCompat="@drawable/ic_star_blank"/>

            </LinearLayout>

            <com.example.cupidlove.customview.textview.TextViewRegular
                android:id="@+id/tvPlaceDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="0.82 miles"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_information"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/value_5"
            android:layout_marginRight="@dimen/value_5"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_2" />

</LinearLayout>